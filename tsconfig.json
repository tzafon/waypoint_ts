{
    "compilerOptions": {
      "moduleResolution": "bundler",
      "lib": ["ES2024"],
      "target": "es2024",
      "module": "preserve",
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"]
}